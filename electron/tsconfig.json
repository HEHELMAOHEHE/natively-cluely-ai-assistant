{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "outDir": "../dist-electron",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["./*"],
      "@electron/*": ["./*"],
      "@llm/*": ["llm/*"],
      "@services/*": ["services/*"],
      "@utils/logger": ["utils/logger"],
      "@utils/*": ["utils/*"],
      "@rag/*": ["rag/*"],
      "@audio/*": ["audio/*"],
      "@db/*": ["db/*"],
      "@update/*": ["update/*"],
      "@config/*": ["config/*"]
    }
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "db/seedDemo.ts",
    "db/test-db.ts"
  ]
}