{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "Natively",
    "version": "0.1.0",
    "identifier": "com.natively.app",
    "build": {
        "beforeDevCommand": "npm run dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "npm run build",
        "frontendDist": "../dist"
    },
    "app": {
        "macOSPrivateApi": true,
        "windows": [
            {
                "label": "launcher",
                "title": "Natively Launcher",
                "width": 1200,
                "height": 800,
                "center": true,
                "decorations": true,
                "titleBarStyle": "Overlay",
                "hiddenTitle": true,
                "transparent": true,
                "windowEffects": {
                    "effects": [
                        "underWindowBackground"
                    ],
                    "state": "active"
                },
                "visible": true,
                "url": "index.html?window=launcher"
            },
            {
                "label": "overlay",
                "title": "Natively Overlay",
                "width": 600,
                "height": 600,
                "decorations": false,
                "transparent": true,
                "alwaysOnTop": true,
                "visible": false,
                "skipTaskbar": true,
                "url": "index.html?window=overlay"
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/AppIcon.icns",
            "icons/icon_32x32.png",
            "icons/icon_128x128.png",
            "icons/icon_256x256.png",
            "icons/icon_512x512.png",
            "icons/icon_1024x1024.png"
        ]
    },
    "plugins": {
        "sql": {
            "preload": [
                "sqlite:natively.db"
            ]
        }
    }
}